{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "clang build test",
        "command": "/usr/bin/clang",
        "args": [
          "-std=c11",
          "-I/usr/local/include",
          "-L/usr/local/lib",
          "-I./include",
          "${workspaceFolder}/src/env_reader.c",
          "${workspaceFolder}/src/processor.c",
          "${workspaceFolder}/src/test_processor.c",
          "-pedantic",
          "-o",
          "${workspaceFolder}/testproc.out"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }